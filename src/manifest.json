{
  "manifest_version": 2,
  "name": "REGIS-BROWSER-BOOKMARK",
  "version": "0.2",
  "description": "Capture web browsing bookmark history",
  "author": "acendrou",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_title": "REGIS-BROWSER-BOOKMARK",
    "default_popup": "popup/choose_options.html"
  },
  "permissions": [
    "bookmarks",
    "downloads"
  ],
  "icons": {
    "48": "img/icon-regis_48px_red.png",
    "96": "img/icon-regis_96px_red.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "regis-browser-bookmark@ekvidi"
    }
  }
}
